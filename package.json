{
  "name": "14islands-handbook",
  "version": "1.0.0",
  "description": "",
  "main": "./src/main.js",
  "scripts": {
    "start": "npm-run-all --parallel watch browser-sync",
    "modernizr": "modernizr -c modernizr-config.json -d build/ -u",
    "browser-sync": "browser-sync start --server 'build' --logLevel info --files 'build' --port 3030",
    "build:css-prod": "stylus --include-css -c -u autoprefixer-stylus src/main.styl -o build/bundle.min.css",
    "build:js-prod": "browserify src/main.js -t babelify -g uglifyify | uglifyjs -c > build/bundle.min.js",
    "build:svg": "cp -R src/svg build/ && find build/svg -name '*.svg' -type f -exec svgo {} --disable=cleanupIDs \\;",
    "build:pug": "pug --basedir . src/index.pug --out build",
    "build": "npm run modernizr -s run build:css-prod -s && npm run build:js-prod -s && npm run build:svg -s && npm run build:pug -s",
    "watch:js": "watchify src/main.js -d -t babelify -o build/bundle.min.js",
    "watch:css": "stylus -w --include-css -m -u autoprefixer-stylus src/main.styl -o build/bundle.min.css",
    "watch:lint": "onchange 'src/**/*.js' -- npm run lint -s",
    "watch:svg": "onchange 'src/svg/**/*.svg' -- npm run build:svg -s",
    "watch:pug": "onchange 'src/**/*.pug' -- npm run build:pug -s",
    "watch": "npm-run-all --parallel watch:*",
    "preinstall": "npm install pug-cli -g",
    "postinstall": "npm run build"
  },
  "engines": {
    "node": "6.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "",
  "devDependencies": {
    "StylusModularScale": "github:juice49/StylusModularScale",
    "autoprefixer-stylus": "^0.9.2",
    "babel-cli": "^6.6.5",
    "babel-eslint": "^6.0.2",
    "babel-plugin-transform-es2015-classes": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browser-sync": "^2.16.1",
    "browserify": "^13.0.0",
    "browserify-shim": "^3.8.12",
    "component-loader-js": "^3.1.1",
    "desandro-classie": "^1.0.1",
    "es6-modernizr": "^0.9.0",
    "eslint": "^2.7.0",
    "exorcist": "^0.4.0",
    "gsap": "^1.19.0",
    "modernizr": "^3.3.1",
    "normalize-styl": "3.0.3",
    "npm-run-all": "^1.7.0",
    "onchange": "^2.2.0",
    "scrollmonitor": "^1.1.2",
    "serve-static": "1.10.2",
    "snapsvg": "^0.4.0",
    "stylus": "^0.54.2",
    "svgo": "^0.6.6",
    "typesettings": "^3.0.1",
    "typographic": "^2.9.3",
    "uglifyify": "^3.0.1",
    "uglifyjs": "^2.4.10",
    "watch": "^0.17.1",
    "watchify": "^3.7.0",
    "webfontloader": "^1.6.24"
  },
  "browser": {},
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {}
}
